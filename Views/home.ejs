        </form>
      </div>
    </div>
  </nav>
  <br><br>
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <% if (CourseTitle && CourseDesc) { %>
        <span style="color: red;"> Course with Title "<%= CourseTitle %>" and description "<%= CourseDesc %>" has
              been deleted</span>
        <br><br>
        <% } %>

          <% categories.forEach(({category, Course})=> { %>
            <div class="card mb-3">
              <% Course.forEach(co=> { %>
                <div class="card-body">
                  <h3 class="card-title">
                    <%= category %>
                  </h3>
                  <h5 class="card-title">
                    <%= co.title %>
                  </h5>
                  <p class="card-text">
                    <%= co.description %>
                  </p>
                  <a href="/course/<%= co.id %>" class="btn btn-dark"
                    style="font-family: 'Poppins', sans-serif;; font-size: larger;">See Course</a>
                  <a href="/course/edit/<%= co.id %>" class="btn btn-dark"
                    style="font-family: 'Poppins', sans-serif;; font-size: larger;">Edit Course</a>
                  <a href="/course/delete/<%= co.id %>" class="btn btn-dark"
                    style="font-family: 'Poppins', sans-serif;; font-size: larger;">Delete Course</a>
                </div>
                <% }) %>
            </div>
            <% }); %>

